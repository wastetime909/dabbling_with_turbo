<p style="color: green"><%= notice %></p>

<h1>Projects</h1>
<div class='container'>
  <% @projects.each do |project| %>
    <%= turbo_frame_tag dom_id(project), src: project_path(project) %>
  <% end %>
</div>
<div class='container'>
  <table id="projects" class='table'>
    <tr>
      <th>
        Name
      </th>
      <th>
        Active
      </th>
      <th>
        Actions
      </th>
    </tr>
    <% @projects.each do |project| %>
      <tr id="<%= dom_id project %>">
        <td>
          <%= project.name %>
        </td>
        <td>
          <%= project.active %>
        </td>
        <td>
          <%= link_to "Show", project %>
        </td>
        <td>
          <%= link_to "Edit", edit_project_path(project) %>
        </td>
        <td>
          <%= link_to "Destroy", project, "data-turbo-method": :delete, "data-turbo-confirm": "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to "New project", new_project_path %>
</div>
<div class='container mt-4 mb-5'>
  <h4>Turbo!</h4>
  <%= turbo_frame_tag "project_list" do %>
    <table id="projects_2" class='table'>
      <tr>
        <th>
          Name
        </th>
        <th>
          Active
        </th>
        <th>
          Actions
        </th>
      </tr>
      <% @projects.each do |project| %>
        <tr id="<%= dom_id project %>">
          <td>
            <%= project.name %>
          </td>
          <td>
            <%= project.active %>
          </td>
          <td>
            <%= link_to "Show", project %>
          </td>
          <td>
            <%= link_to "Edit", edit_project_path(project) %>
          </td>
          <td>
            <%= link_to "Destroy", project, "method": :delete, "data-confirm": "Are you sure?" %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
  <%= turbo_frame_tag "new_project_frame" do %>
    <%= link_to "New Project", new_project_path, data: {turbo_frame: "project_list"} %>
  <% end %>
</div>


